# App Configuration
NEXT_PUBLIC_SITE_URL=https://greeventech.com
NODE_ENV=production

# Email Configuration (for contact form)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@greeventech.com
SMTP_TO=your-email@gmail.com

# Database
DATABASE_URL=postgresql://postgres:yourpassword@postgres:5432/portfolio

# Analytics - Umami
NEXT_PUBLIC_UMAMI_URL=https://analytics.greeventech.com
NEXT_PUBLIC_UMAMI_WEBSITE_ID=your-website-id

# Session Recording - PostHog
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://posthog.greeventech.com

# Rate Limiting
RATE_LIMIT_MAX=5
RATE_LIMIT_WINDOW=60000

# Security
CSRF_SECRET=your-random-secret-key-here
ADMIN_SECRET_KEY=your-admin-secret-key-for-stats-api
